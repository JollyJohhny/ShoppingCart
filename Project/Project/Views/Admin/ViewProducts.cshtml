<br />
<br />
<h2>You can View Update and Delete product from Here!</h2>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.ImagePath" style="width:160px;height:180px;border-radius:50%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <div class="button-group-area mt-40">
                    <a href="/Admin/UpdateProduct/@item.Id" class="genric-btn primary circle arrow">Update<span class="ti-arrow-right"></span></a>
                    <a href="/Admin/DeleteProduct/@item.Id" onclick="return confirm('Are You Sure you want to delete this productS?')" class="genric-btn primary circle arrow">Delete<span class="ti-arrow-right"></span></a>
                </div>
            </td>
        </tr>
    }

</table>
